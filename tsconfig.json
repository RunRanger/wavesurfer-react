{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/setupTests.tsx",
    "src/stories",
    "src/*.ts"
  ]
}
